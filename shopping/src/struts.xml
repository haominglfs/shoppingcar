<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>


	<package name="shopping" extends="struts-default">

		<action name="register" class="cn.lut.shopping.action.RegisterAction"
			method="register">
			<result name="success">/login.jsp</result>
			<result name="fail" type="redirect">/register.jsp</result>
		</action>

		<action name="login" class="cn.lut.shopping.action.RegisterAction"
			method="login">
			<result name="success1">/index.jsp</result>
			<result name="fail1" type="redirect">/login.jsp</result>
		</action>
	</package>

</struts>
